<idea-plugin>
    <id>com.ishow.plugin.mvvm</id>
    <name>MVVM Code Gengrenator</name>
    <version>1.0.5</version>
    <vendor email="y.haiyang@qq.com" url="http://www.i-show.club">i-show</vendor>

    <description><![CDATA[
      <h1>MVVM Code Gengrenator</h1>
      <p> 可以自动生成Android MVVM 代码的插件</p>
    ]]></description>

    <change-notes><![CDATA[
       <h1>MVVM Code Gengrenator</h1>
      <p> 可以自动生成Android MVVM 代码的插件</p>
    ]]>
    </change-notes>
    <idea-version since-build="173.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.ishow.plugin.mvvm.configure.MvvmTemplateConfigure"/>
        <applicationService serviceImplementation="com.ishow.plugin.mvvm.configure.MvvmTemplateSettings"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="MVVMActivityAction"
                class="com.ishow.plugin.mvvm.action.MVVMActivityAction"
                text="MVVMActivityAction"
                description="Activity生成Action">
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta A"/>
        </action>

        <action id="MVVMFragmentAction"
                class="com.ishow.plugin.mvvm.action.MVVMFragmentAction"
                text="MVVMFragmentAction"
                description="Fragment生成Action">
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta F"/>
        </action>

    </actions>

</idea-plugin>